<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtAdresaPosiljaoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:text="Grad"
        />

    <TextView
        android:id="@+id/BrojPaketa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:padding="5dp"
        android:text="Broj paketa"
        android:textColor="@android:color/holo_red_dark" />
    <TextView
        android:id="@+id/txtAdresaPrimalac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:text="Grad"
        />


    <TextView
        android:id="@+id/txtPosiljaoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtAdresaPosiljaoc"
        android:padding="5dp"
        android:text="Posiljaoc" />

    <TextView
        android:id="@+id/txtBrojPaketa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAdresaPosiljaoc"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="00"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/txtPrimaoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtAdresaPosiljaoc"
        android:padding="5dp"
        android:text="Primaoc" />

</RelativeLayout>