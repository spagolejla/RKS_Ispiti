<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment1"
    android:padding="16dp"
    >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textViewPosiljalac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posiljalac"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="18dp"
        />

    <EditText
        android:id="@+id/txtPosiljaoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPosiljalac"
        android:enabled="false"
        android:text=""
        />

    <EditText
        android:id="@+id/txtAdresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPosiljaoc"
        android:enabled="false"
        android:text=""
        />
<Button
    android:id="@+id/btnPromjeniPosiljaoca"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtAdresa"
    android:text="Promjeni posiljaoca"
    />


    <Button
        android:id="@+id/btnDalje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPromjeniPosiljaoca"
        android:text="Dalje"
        android:layout_alignParentRight="true"
        android:background="@color/orange"
        android:layout_marginTop="30dp"
        />
</RelativeLayout>