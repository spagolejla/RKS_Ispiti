<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"

    >

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/txtFirstLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FirstLine"

        android:textSize="16sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/txtSecondLine"
        android:layout_below="@id/txtFirstLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SecondLine"



        />
    <TextView
        android:id="@+id/txtThirdLine"
        android:layout_below="@id/txtSecondLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ThirdLine"

        />
    <TextView
        android:id="@+id/txtMeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:text="TextView" />
</RelativeLayout>