<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment2">

    <TextView
        android:id="@+id/TextViewPodaci"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textColor="@android:color/holo_blue_light"
        android:text="Podaci o paketu" />

    <EditText
        android:id="@+id/txtMasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:layout_below="@+id/TextViewPodaci"
        android:hint="Masa"

        />
    <EditText
        android:id="@+id/txtNapomena"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textAlignment="center"
        android:layout_below="@+id/txtMasa"
android:hint="Napomena"
        />

    <Switch
        android:id="@+id/sw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNapomena"
        android:layout_alignParentLeft="true"
        android:text="Plati pouzecem"
        />

    <EditText
        android:id="@+id/txtIznos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/txtNapomena"
        android:inputType="number"
        android:layout_alignParentRight="true"
        android:hint="Iznos"
        />


    <Button
        android:id="@+id/btnNazad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nazad"
        android:layout_below="@+id/sw"
        android:background="@android:color/holo_orange_light"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/btnZavrsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zavrsi"
        android:layout_below="@+id/sw"
        android:background="@android:color/holo_orange_light"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>